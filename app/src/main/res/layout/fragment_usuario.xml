<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/silver"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="estudo.produto.presenter.presenter.ViewModel.Fragments.UserFragment">

    <View
        android:layout_marginTop="100dp"
        android:id="@+id/perfil_usario"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/grupo_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView

        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@id/perfil_usario"
        app:layout_constraintEnd_toEndOf="@+id/perfil_usario"
        app:layout_constraintTop_toTopOf="@id/perfil_usario"
        app:layout_constraintBottom_toBottomOf="@id/perfil_usario"
        android:src="@drawable/ic_user"
        />

    <View

        android:layout_height="330dp"
        android:id="@+id/Dados_usuario"
        style="@style/Grupodecompoentes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/perfil_usario" />

    <TextView
        style="@style/EditText"
        android:id="@+id/text_dados_nome"
        android:text = ""
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="@id/Dados_usuario"
        app:layout_constraintEnd_toEndOf="@+id/Dados_usuario"
        app:layout_constraintTop_toTopOf="@id/Dados_usuario"
        app:drawableLeftCompat="@drawable/ic_user" />
    <TextView
        style="@style/EditText"
        android:id="@+id/text_dados_email"
        android:text= ""
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="@id/Dados_usuario"
        app:layout_constraintEnd_toEndOf="@+id/Dados_usuario"
        app:layout_constraintTop_toBottomOf="@id/text_dados_nome"
        app:drawableLeftCompat="@drawable/ic_email" />

    <Button
        android:textColor="@color/black"
        android:id="@+id/bt_deslogar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/text_dados_email"
        style="@style/Botao"
        android:text="@string/logoff"
        />
</androidx.constraintlayout.widget.ConstraintLayout>