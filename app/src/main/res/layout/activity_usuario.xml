<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usuario_Activity"
    android:background="@drawable/background"
    >


    <View
        android:layout_marginTop="80dp"
        android:id="@+id/perfil_usario"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/grupo_usuario"
         app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/botao_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/perfil_usario"
        android:layout_marginRight="450dp"
        android:layout_marginBottom="100dp"
        android:drawableStart="@drawable/ic_voltar"
        />

    <ImageView
                android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@id/perfil_usario"
        app:layout_constraintEnd_toEndOf="@+id/perfil_usario"
        app:layout_constraintTop_toTopOf="@id/perfil_usario"
        app:layout_constraintBottom_toBottomOf="@id/perfil_usario"
        android:src="@drawable/ic_user"
        />

    <View
        android:id="@+id/Dados_usuario"
        style="@style/Grupodecompoentes"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/perfil_usario"
         />

      <TextView
          android:drawableStart="@drawable/ic_user"
          style="@style/EditText"
          android:layout_marginTop="20dp"
          android:id="@+id/Dados_Nome"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:textSize="24dp"
          android:layout_width="300dp"
          android:layout_height="50dp"
          app:layout_constraintStart_toStartOf="@id/Dados_usuario"
          app:layout_constraintEnd_toEndOf="@+id/Dados_usuario"
          app:layout_constraintTop_toTopOf="@id/Dados_usuario"
          />
    <TextView
        android:drawableStart="@drawable/ic_email"
        style="@style/EditText"
        android:layout_marginTop="20dp"
        android:id="@+id/Dados_email"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/Dados_usuario"
        app:layout_constraintEnd_toEndOf="@+id/Dados_usuario"
        app:layout_constraintTop_toBottomOf="@id/Dados_Nome"
        />

    <Button
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Dados_email"
        style="@style/Botao"
        android:text="@string/logoff"
        />
</androidx.constraintlayout.widget.ConstraintLayout>